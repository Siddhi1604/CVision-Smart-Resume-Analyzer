{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/analyze-resume",
      "destination": "/backend/main.py"
    },
    {
      "source": "/ai-analyze-resume", 
      "destination": "/backend/main.py"
    },
    {
      "source": "/build-resume",
      "destination": "/backend/main.py"
    },
    {
      "source": "/job-categories",
      "destination": "/backend/main.py"
    },
    {
      "source": "/job-roles",
      "destination": "/backend/main.py"
    },
    {
      "source": "/job-skills",
      "destination": "/backend/main.py"
    },
    {
      "source": "/user-analyses/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/download-resume/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/send-feedback",
      "destination": "/backend/main.py"
    },
    {
      "source": "/store-analysis",
      "destination": "/backend/main.py"
    },
    {
      "source": "/health",
      "destination": "/backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}