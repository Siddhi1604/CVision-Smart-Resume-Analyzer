{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "cmd": "npm install && npm run build",
        "cwd": "frontend", 
        "distDir": "build",
        "src": "frontend"
      }
    },
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/job-categories",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/job-roles",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/analyze-resume",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/ai-analyze-resume",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/build-resume",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/send-feedback",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/user-analyses/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/download-resume/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/job-skills",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/store-analysis",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/static/$1"
    },
    {
      "src": "/manifest.json",
      "dest": "/frontend/manifest.json"
    },
    {
      "src": "/asset-manifest.json",
      "dest": "/frontend/asset-manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}