{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build",
        "buildCommand": "npm install && npm run build"
      }
    },
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/analyze-resume",
      "dest": "/backend/main.py"
    },
    {
      "src": "/ai-analyze-resume", 
      "dest": "/backend/main.py"
    },
    {
      "src": "/build-resume",
      "dest": "/backend/main.py"
    },
    {
      "src": "/job-categories",
      "dest": "/backend/main.py"
    },
    {
      "src": "/job-roles",
      "dest": "/backend/main.py"
    },
    {
      "src": "/job-skills",
      "dest": "/backend/main.py"
    },
    {
      "src": "/user-analyses/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/download-resume/(.*)",
      "dest": "/backend/main.py"
    },
    {
      "src": "/send-feedback",
      "dest": "/backend/main.py"
    },
    {
      "src": "/store-analysis",
      "dest": "/backend/main.py"
    },
    {
      "src": "/health",
      "dest": "/backend/main.py"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}