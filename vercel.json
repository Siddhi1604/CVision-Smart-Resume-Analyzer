{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/build"
      }
    },
    {
      "src": "jobs.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/jobs", "destination": "/jobs.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}